<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <!--                PROPERTIES                 -->
    <xacro:property name = 'a' value = '1'/>
    <xacro:property name = 'b' value = '4'/>
    <xacro:property name = 'd' value = '0.2'/>

    <material name = "black">
        <color rgba = "0.1 0.1 0.1 1"/>
    </material>

    <material name = "red">
        <color rgba = "1 0 0 1"/>
    </material>

    <material name = "purple">
        <color rgba = "0.25 0.15 0.25 1"/>
    </material>

    <!-- base link -->
    <link name = "base_link"> 
    </link>
    
    <!-- chassis to base link joint -->
    <joint name = 'base_link_to_chassis_joint' type = 'fixed'>
        <parent link = 'base_link'/>
        <child link = 'chassis_link'/>
        <origin xyz = '0 0 0.121'/>
    </joint>

    <!-- chassis link -->
    <link name = 'chassis_link'>
        <visual>
            <origin xyz = '0 0 0' rpy = '1.570796 0 0'/>
            <geometry>
                <mesh filename = "file://$(find MRP_Description)/meshes/entire_chassis.stl" scale = "0.001 0.001 0.001"/>
            </geometry>
            <material name = 'black'/>
        </visual>

        <collision>
            <origin xyz = '0.02125 0 -0.02' rpy = '1.570796 0 0'/>
            <geometry>
                <box size = '0.3605 0.06 0.288'/>
            </geometry>
        </collision>

        <inertial>
            <mass value = '1.0'/>
            <inertia 
                ixx = '${a * 8.617577e-3}' 
                ixy = '${a * 9.10052e-4}' 
                ixz = '${a * 1e-8}' 
                iyy = '${a * 0.030175621}' 
                iyz = '${a * 1e-8}' 
                izz = '${a * 0.022585289}'/>
        </inertial>
    </link>

    <!-- rear left wheel to chassis joint -->
    <joint name = 'rear_left_wheel_joint' type = 'continuous'>
        <parent link = 'chassis_link'/>
        <child link = 'rear_left_wheel'/>
        <origin xyz = '-0.1355 0.144 -0.0285' rpy = '-1.570796 0 0'/>
        <axis xyz = '0 0 1'/>
        <dynamics damping = '${d}' />
    </joint>

    <!-- rear left wheel -->
    <link name = 'rear_left_wheel'>
        <visual>
            <origin xyz = "0 0 0.012" rpy = "0 1.570796 0"/>
            <geometry>
                <mesh filename = "file://$(find MRP_Description)/meshes/wheel_coupler_assembly.stl" scale = "0.001 0.001 0.001"/>
            </geometry>
            <material name = 'purple'/>
        </visual>

        <collision>
            <origin xyz = "0 0 0.01" rpy = "0 0 0"/>
            <geometry>
                <!-- <cylinder length = '0.02' radius = '0.0925'/> -->
                <sphere radius = '0.0925'/>
            </geometry>
        </collision>

        <inertial>
            <mass value = "0.15"/>
            <inertia 
                ixx = "${b * 3.20634763e-4}" 
                ixy = "${b * 1e-8}" 
                ixz = "${b * 1e-8}" 
                iyy = "${b * 3.20634763e-4}" 
                iyz = "${b * 1e-8}" 
                izz = "${b * 6.314298594e-4}"/>
        </inertial>
    </link>

    <!-- rear right wheel to chassis joint -->
    <joint name = 'rear_right_wheel_joint' type = 'continuous'>
        <parent link = 'chassis_link'/>
        <child link = 'rear_right_wheel'/>
        <origin xyz = '-0.1355 -0.144 -0.0285' rpy = '1.570796 0 0'/>
        <axis xyz = '0 0 -1'/>
        <dynamics damping = '${d}' />
    </joint>

    <!-- rear right wheel -->
    <link name = 'rear_right_wheel'>
        <visual>
            <origin xyz = "0 0 0.012" rpy = "0 1.570796 0"/>
            <geometry>
                <mesh filename = "file://$(find MRP_Description)/meshes/wheel_coupler_assembly.stl" scale = "0.001 0.001 0.001"/>
            </geometry>
            <material name = 'purple'/>
        </visual>

        <collision>
            <origin xyz = "0 0 0.01" rpy = "0 0 0"/>
            <geometry>
                <!-- <cylinder length = '0.02' radius = '0.0925'/> -->
                <sphere radius = '0.0925'/>
            </geometry>
        </collision>

        <inertial>
            <mass value = "0.15"/>
            <inertia 
                ixx = "${b * 3.20634763e-4}" 
                ixy = "${b * 1e-8}" 
                ixz = "${b * 1e-8}" 
                iyy = "${b * 3.20634763e-4}" 
                iyz = "${b * 1e-8}" 
                izz = "${b * 6.314298594e-4}"/>
        </inertial>
    </link>

    <!-- front left wheel to chassis joint -->
    <joint name = 'front_left_wheel_joint' type = 'continuous'>
        <parent link = 'chassis_link'/>
        <child link = 'front_left_wheel'/>
        <origin xyz = '0.1755 0.144 -0.0285' rpy = '-1.570796 0 0'/>
        <axis xyz = '0 0 1'/>
        <dynamics damping = '${d}' />
    </joint>    

    <!-- front left wheel -->
    <link name = 'front_left_wheel'>
        <visual>
            <origin xyz = "0 0 0.012" rpy = "0 1.570796 0"/>
            <geometry>
                <mesh filename = "file://$(find MRP_Description)/meshes/wheel_coupler_assembly.stl" scale = "0.001 0.001 0.001"/>
            </geometry>
            <material name = 'purple'/>
        </visual>

        <collision>
            <origin xyz = "0 0 0.01" rpy = "0 0 0"/>
            <geometry>
                <!-- <cylinder length = '0.02' radius = '0.0925'/> -->
                <sphere radius = '0.0925'/>
            </geometry>
        </collision>

        <inertial>
            <mass value = "0.15"/>
            <inertia 
                ixx = "${b * 3.20634763e-4}" 
                ixy = "${b * 1e-8}" 
                ixz = "${b * 1e-8}" 
                iyy = "${b * 3.20634763e-4}" 
                iyz = "${b * 1e-8}" 
                izz = "${b * 6.314298594e-4}"/>
        </inertial>
    </link>

    <!-- front right wheel to chassis joint -->
    <joint name = 'front_right_wheel_joint' type = 'continuous'>
        <parent link = 'chassis_link'/>
        <child link = 'front_right_wheel'/>
        <origin xyz = '0.1755 -0.144 -0.0285' rpy = '1.570796 0 0'/>
        <axis xyz = '0 0 -1'/>
        <dynamics damping = '${d}' />
    </joint>    

    <!-- front right wheel -->
    <link name = 'front_right_wheel'>
        <visual>
            <origin xyz = "0 0 0.012" rpy = "0 1.570796 0"/>
            <geometry>
                <mesh filename = "file://$(find MRP_Description)/meshes/wheel_coupler_assembly.stl" scale = "0.001 0.001 0.001"/>
            </geometry>
            <material name = 'purple'/>
        </visual>

        <collision>
            <origin xyz = "0 0 0.01" rpy = "0 0 0"/>
            <geometry>
                <!-- <cylinder length = '0.02' radius = '0.0925'/> -->
                <sphere radius = '0.0925'/>
            </geometry>
        </collision>

        <inertial>
            <mass value = "0.15"/>
            <inertia 
                ixx = "${b * 3.20634763e-4}" 
                ixy = "${b * 1e-8}" 
                ixz = "${b * 1e-8}" 
                iyy = "${b * 3.20634763e-4}" 
                iyz = "${b * 1e-8}" 
                izz = "${b * 6.314298594e-4}"/>
        </inertial>
    </link>
</robot>